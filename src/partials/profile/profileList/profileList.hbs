<ul class="profile-list">
    {{#each items}}
    <li class="profile-list__item flex flex-ai-center gap-12 flex-jc-sb">
        {{#if name}}
          {{#if link }}
            <a href="{{ link }}" class="name name--link flex-00a">{{ name }}</a>
          {{else}}
            <div class="name flex-00a">{{name}}</div>
          {{/if}}
        {{/if}}
        {{#if value}}<div class="value flex-11a">{{value}}</div>{{/if}}
    </li>
    {{/each}}
  <li class="profile-list__item flex flex-ai-center gap-12 flex-jc-sb"> {{{ exitButton }}} </li>
</ul>
