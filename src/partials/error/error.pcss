.error {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex-direction: column;
    gap: 10px;
    font-weight: 500;

    &__code {
        font-size: 64px;
        line-height: 72px;
    }

    &__title {
        font-size: 24px;
        line-height: 32px;
    }

    &__button {
        max-width: 252px;
    }
}