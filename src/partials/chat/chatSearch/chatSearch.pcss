.chat-search {
    display: flex;
    flex-direction: column;
    padding: 8px 24px;
    gap: 16px;
    background: var(--color-primary);
    border-bottom: 1px solid var(--color-subtext);

    &__top {
        text-align: right;
    }

    &__settings {
        padding: 0;
        border: none;
        background: none;
        position: relative;
        font-weight: 500;
        font-size: 14px;
        line-height: 16px;
        color: var(--color-text);
        display: inline-flex;
        align-items: flex-end;
        gap: 6px;
        cursor: pointer;

        &::after {
            content: '';
            display: block;
            width: 12px;
            height: 12px;
            background-color: var(--color-neutral);
            -webkit-mask-image: url(../../../assets/icons/arrow-right.svg);
            mask-image: url(../../../assets/icons/arrow-right.svg);
        }
    }
}