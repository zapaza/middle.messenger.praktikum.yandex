.chat-header {
    padding: 8px 16px;
    background: var(--color-primary);
    width: 100%;

    &__avatar {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        background-color: var(--color-neutral);
    }

    &__name {
        font-weight: 600;
        font-size: 14px;
        line-height: 21px;
        color: var(--color-text);
    }

    &__settings {
        display: flex;
        gap: 4px
    }
}
